<div>
  <h1>Sign Ups</h1>

  <% @sign_ups.order("created_at DESC").each do |sign_up| %>

    <div>
      <h4>Student details</h4>
      <b>Name:</b> <%= sign_up.user.first_name %> <%= sign_up.user.last_name %><br>
      <b>Email:</b> <%= sign_up.user.email %><br>
      <b>Address 1:</b> <%= sign_up.user.address_one %><br>
      <b>Address 2:</b> <%= sign_up.user.address_two %><br>
      <b>City, State, Postal:</b> <%= sign_up.user.city %>, <%= sign_up.user.state %>, <%= sign_up.user.postal_code %><br>
      <b>Country:</b> <%= sign_up.user.country %><br>
      <b>Mobile:</b> <%= sign_up.user.mobile %><br>
      <b>Preferred Location:</b> <%= sign_up.user.preferred_location %><br>
      <b>Time Zone:</b> <%= sign_up.user.time_zone %><br>
      <br>
      <br>
      <b>Class:</b> <%= sign_up.klass.title %><br>
      <%= sign_up.klass.start_timestamp.strftime("Starting on %m/%d/%Y at %I:%M%p") %><br>
      <%= sign_up.klass.end_timestamp.strftime("Ending on %m/%d/%Y at %I:%M%p") %><br>
      Attended: <%= sign_up.attended ? "Yes" : "No" %><br>
      Cancelled: <%= sign_up.canceled ? "Yes": "No"%><br>
      <%= link_to "Penalize student for not attending", sign_up_penalize_path(sign_up), method: :post %>
      <%= link_to "Cancel attending", cancel_sign_up_path(sign_up), method: :put %>
    </div>

    <hr>

  <% end %>
</div>


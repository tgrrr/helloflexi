  <div class="row">
    <div class="large-8 columns large-centered">
      <div class="signup-panel">
        <p class="welcome">Hi there. Lets get started...</p>
        <!--<p class="welcome">Hi there. Let's grab a couple of details<br> to start your 7 day free trial...</p>-->
           <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>


            <div class="row collapse">
              <div class="small-2  columns">
                <span class="prefix"><%= fa_icon 'user', class: 'fa-1' %></i></span>
              </div>
              <div class="small-5  columns">
                <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name' %>
              </div>
              <div class="small-5 columns ">
                <%= f.text_field :last_name, placeholder: 'Surname' %>
              </div>
            </div>

            <div class="row collapse">
              <div class="small-2  columns">
                <span class="prefix"><%= fa_icon 'envelope-o', class: 'fa-1'  %></i></span>
              </div>
              <div class="small-10  columns">
                <%= f.text_field :email, placeholder: 'Email Address'  %>
              </div>
            </div>

            <div class="row collapse">
              <div class="small-2  columns">
                <span class="prefix"><%= fa_icon 'phone', class: 'fa-1'  %></i></span>
              </div>
              <div class="small-10  columns">
                <%= f.text_field :mobile, placeholder: 'Mobile', class: 'fa-1'  %>
              </div>
            </div>


            <div class="row collapse">
              <div class="small-2  columns">
                <span class="prefix"><%= fa_icon 'home', class: 'fa-1'  %></i></span>
              </div>
              <div class="small-5  columns">
                <%= f.text_field :address_one, placeholder: 'Address' %>
              </div>
              <div class="small-5 columns ">
                <%= f.text_field :address_two, placeholder: 'Address 2' %>
              </div>
            </div>
            <div class="row collapse">

              <div class="small-5  columns small-offset-2">
                <%= f.text_field :city, placeholder: 'City' %>
              </div>
              <div class="small-5 columns">
                <%= f.text_field :postal_code, placeholder: 'Postcode' %>
              </div>
            </div>
            <div class="row collapse">
              <div class="small-5  columns small-offset-2">
                <%= f.text_field :state, placeholder: 'State' %>
              </div>
              <div class="small-5 columns">
                <%= f.time_zone_select(:time_zone, ActiveSupport::TimeZone.all.sort, model: ActiveSupport::TimeZone, default: 'Melbourne') %>
              </div>
            </div>

            <div class="row collapse">
              <div class="small-2  columns">
                <span class="prefix"><%= fa_icon 'lock' %></i></span>
              </div>
              <div class="small-5  columns">
                <%= f.password_field :password, autocomplete: "off", placeholder: 'Password (8+ characters)' %>
              </div>
              <div class="small-5 columns ">
                <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password again thanks' %>
              </div>
            </div>
            <div class="row collapse">
              <div class="small-6  columns">
                <%= f.check_box :agree_to_terms %>
                <div id="fix-tac">
                I agree to the
              <%= link_to "Terms & Conditions", toc_path, target: "_blank" %><br>
                  and <%= link_to "Privacy Statement", privacy_path, target: "_blank" %>

                  </div>
            </div>

              <div class="small-6  columns">

            <button href="#" data-dropdown="drop1" aria-controls="drop1" aria-expanded="false" class="button dropdown" id="coupon-button">
              I have a coupon
            </button><br>

            <ul id="drop1" data-dropdown-content class="f-dropdown" aria-hidden="true">
              <div class="field">
                <%= f.label :coupon_code %><br />
                <%= f.text_field :coupon_code, value: "alloftheclassestoday" %>
              </div>

              </ul>
              </div>

              <%= f.hidden_field :preferred_location, value: 'Melbourne'  %>
              <%= f.hidden_field :source, value: '210686'  %>
              <%= f.hidden_field :country, placeholder: 'Country', value: 'Australia' %>

              <div class="actions">
              <%= f.submit "Sign up", class: 'button expand' %>
            </div>
              <%= render "devise/shared/links" %>
            </div>
            </div>
            </div>

      <% end %>
</div>